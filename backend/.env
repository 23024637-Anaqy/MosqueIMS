# PostgreSQL Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:sultan%40123@localhost:5432/mosque_ims

# Server Port
PORT=4000

# JWT Secret (change this to a random string)
SECRET=your_very_secret_jwt_key_here_change_me

# Database Initialization
# Set to true ONLY on first run to create tables, then set to false
INIT_DB=false

# Prototype Mode (in-memory database)
# Set to false to use PostgreSQL
PROTOTYPE=false

# Example connection strings for different environments:

# Local PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/mosque_ims

# Docker PostgreSQL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mosque_ims

# Heroku Postgres (provided automatically):
# DATABASE_URL=postgres://username:password@ec2-xxx.compute.amazonaws.com:5432/dbname

# Supabase:
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# AWS RDS:
# DATABASE_URL=postgresql://username:password@your-db.rds.amazonaws.com:5432/mosque_ims
