:{$PORT} {
    root * /app/build
    encode gzip
    file_server
    try_files {path} /index.html
    
    header {
        -Server
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy no-referrer-when-downgrade
    }
    
    log {
        output stdout
        format console
    }
}
